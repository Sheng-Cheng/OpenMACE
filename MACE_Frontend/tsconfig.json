{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": false,
    "jsx": "react",
    "target": "ES6",
    "experimentalDecorators": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": false,
  "include": ["src/**/*.ts", "src/**/*.tsx", "main.ts"],
  "exclude": ["node_modules"]
}
